@model WebPatientApp.Models.DTO.PatientListVm
@{
}

<div class="tbl-container">
    <h2>Movies</h2>

    <table>
        <tr>
            <th>Name</th>
            <th>Gender</th>
            <th>PhoneNumber</th>
            <th>Email</th>
            <th>Age</th>
        </tr>
        @foreach(var item in Model.PatientList){
        <tr>
            <td>@item.Name</td>
                <td>@item.Gender</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Email</td>
                <td>@item.Age</td>
                <td>
                <a href="/Patient/Edit?id=@item.Id" class="btn btn-default"><i class="fa fa-edit"></i></a>
                    <a onclick="return window.confirm('Are you sure?')" href="/Patient/Delete?id=@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
        }
     
    </table>
    <div class="input-container">
@*        <a href="/Movie/Add" class="btn btn-sec">Back</a>*@

        @Html.ActionLink("Back", "Add", "Patient" )
    </div>
</div>
