@model PatientDomain.Entities.Patient
@{
}

<form class="w-40" asp-action="Add" method="post" enctype="multipart/form-data">
    <h2 class="pb-10">Add Movie</h2>
    
    <div class="input-container">
        <label asp-for="Name" class="w-40">Name</label>
        <input type="text" class="input" asp-for="Name">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Name"> </span>
    </div>

    <div class="input-container">
        <label asp-for="Age" class="w-40">Age</label>
        <input type="text" class="input" asp-for="Age">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Age"> </span>
    </div>

    <div class="input-container">
        <label asp-for="PhoneNumber" class="w-40">Phone Number</label>
        <input type="text" class="input" asp-for="PhoneNumber">
    </div>


    <div class="input-container">
        <label asp-for="Email" class="w-40">Email</label>
        <input type="text" class="input" asp-for="Email">
    </div>

    <div class="input-container">
        <label asp-for="Gender" class="w-40">Gender</label>
        <input type="text" class="input" asp-for="Gender">
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
        <button class="btn btn-default" type="submit">Save</button>
        <a class="btn btn-sec" href="/Patient/PatientList">All records</a>
    </div>
</form>
